<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:victoria"
             x:Class="victoria.MainPage"
             Title="Project Victoria" >
  <StackLayout>
    <Label Text="Project Victoria"
       Font="Large"
       HorizontalOptions="Center"
       VerticalOptions="CenterAndExpand" />

    <Button Text="Test Instruments"
    HorizontalOptions="Center"
    VerticalOptions="CenterAndExpand"
    Clicked="TestMidi" />

    <Label Text="Let's Play Some Music!"
       Font="Large"
       HorizontalOptions="Center"
       VerticalOptions="CenterAndExpand" />

    <Button Text="Start Scanning!"
        HorizontalOptions="Center"
        VerticalOptions="CenterAndExpand"
        Clicked="StartContinuousScanning" />

    <Slider VerticalOptions="CenterAndExpand"
        ValueChanged="OnRefreshRateChanged" />
    <Label x:Name="refreshRateLabel"
   Text="A simple Label"
   Font="Large"
   HorizontalOptions="Center"
   VerticalOptions="CenterAndExpand" />
  </StackLayout>
</ContentPage>